@model SportStore.Application.Products.Queries.ProductDTO
<div id="product-card" class="card border-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Name
        <span class="badge badge-pill badge-primary float-right">
            <small>@Model.Price.ToString("c")</small>
        </span>
    </h4>
</div>
    <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type ="hidden" name="ProductId" value="@Model.Id" />
        <input type ="hidden" name="ReturnUrl" value="@Context.Request.GetPathAndQuery()">
        <span class="card-text p-1">@Model.Description</span>
        <button class="btn btn-success btn-sm float-right">Add To Cart</button>
        </form>
</div>