@model SportStore.Application.Products.Queries.ProductDTO
<div id="product-card" class="card border-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Name
        <span class="badge badge-pill badge-primary float-right">
            <small>@Model.Price.ToString("c")</small>
        </span>
    </h4>
</div>
<div class="card-text p-1">@Model.Description @Model.Category.Name</div>
</div>