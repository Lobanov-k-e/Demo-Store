@model IEnumerable<SportStore.Application.Products.Queries.ProductDTO>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (Model.Count() == 0)
{
    <div class="text-center">
        <form asp-action="SeedData" asp-controller="Admin" method="post">
            <button type="submit" class="btn btn-danger">Seed Database</button>
            </form>
        </div>
}
else
{
<figure class="figure">
<a class="btn btn-primary" asp-action="AddProduct">Add new</a>
    </figure>
<table class=" table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>
                <form asp-action="DeleteProduct" method="post">
                    <a asp-action="EditProduct" class="btn btn-sm btn-warning" asp-route-Id="@product.Id">
                        Edit
                    </a>
                    <input type="hidden" name="ProductId" value="@product.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-action="AddProduct">Add new</a>
}

