@model CartViewModel

<h2>Cart</h2> 
<table class="table table-bordered table-striped">
    <thead>
        <th>Item</th>
        <th>Quantity</th>
        <th class="text-right">Price</th>
        <th  class=" text-right">Subtotal</th>
        <th>Remove from cart</th>
    </thead>
    <tbody>
        @foreach (var line in Model.Lines)
        {
            <tr>
                <td>@line.Product.Name</td>
                <td>@line.Quantity</td>
                <td>@line.Product.Price.ToString("c")</td>
                <td>@line.LinePrice.ToString("c")</td>
                <td>
                    <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                        <input type="hidden" value="@line.Product.Id" name="ProductId" />                       
                        <button type ="submit" class="btn btn-sm btn-danger"> Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td colspan="2" class="text-left">@Model.CartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class="text-center"><a class="btn btn-primary" href ="@Model.ReturnUrl">Continue shopping</a></div>
<div class="text-center"><a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">Checkout</a></div>


